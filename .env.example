# Glass Installation Workflow - Environment Variables
# Copy this file to .env and fill in your actual credentials

# ==========================================================
# AUTHENTICATION
# ==========================================================

# Clerk Authentication
# Get your keys from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# ==========================================================
# NOTION INTEGRATION
# ==========================================================

# Notion API
# Get your API key from: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_integration_token_here

# Notion Database IDs
# Find these in your Notion workspace URLs
NOTION_ORDERS_DB_ID=your_orders_database_id
NOTION_CLIENTS_DB_ID=your_clients_database_id
NOTION_TRUCK_MODELS_DB_ID=your_truck_models_database_id
NOTION_GLASS_PARTS_DB_ID=your_glass_parts_database_id
NOTION_INVENTORY_DB_ID=your_inventory_database_id
NOTION_CREWS_DB_ID=your_crews_database_id
NOTION_PRICING_DB_ID=your_pricing_database_id

# ==========================================================
# FILE STORAGE
# ==========================================================

# Cloudinary (for photos, signatures, and PDF invoices)
# Get your credentials from: https://cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_unsigned_upload_preset
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ==========================================================
# MESSAGING
# ==========================================================

# Twilio (for WhatsApp invoice delivery)
# Get your credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACyour_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# ==========================================================
# DATABASE (Optional - for future features)
# ==========================================================

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@host:5432/database

# ==========================================================
# ANALYTICS (Optional)
# ==========================================================

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# ==========================================================
# OTHER
# ==========================================================

# Next.js
NEXT_TELEMETRY_DISABLED=1

# Arcjet Security (Optional)
# Get your key from https://launch.arcjet.com
# ARCJET_KEY=
